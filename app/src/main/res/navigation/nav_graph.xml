<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/departmentFragment">

    <fragment
        android:id="@+id/departmentFragment"
        android:name="com.example.matbase.DepartmentFragment"
        android:label="DepartmentFragment"
        tools:layout="@layout/fragment_department">
        <action
            android:id="@+id/action_departmentFragment_to_semesterFragment"
            app:destination="@id/semesterFragment" />
    </fragment>

    <fragment
        android:id="@+id/semesterFragment"
        android:name="com.example.matbase.SemesterFragment"
        android:label="SemesterFragment"
        tools:layout="@layout/fragment_semester">
        <argument
            android:name="department"
            app:argType="string" />
        <action
            android:id="@+id/action_semesterFragment_to_subjectsFragment"
            app:destination="@id/subjectsFragment" />
    </fragment>

    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.example.matbase.SubjectsFragment"
        android:label="SubjectsFragment"
        tools:layout="@layout/fragment_subjects">
        <argument
            android:name="semester"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/nav_subject_options"
        android:name="com.example.matbase.ui.SubjectOptionsFragment"
        android:label="Subject Options"
        tools:layout="@layout/fragment_subject_options">

        <argument
            android:name="subjectName"
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/action_nav_subjects_to_nav_subject_options"
        app:destination="@id/nav_subject_options" />


</navigation>