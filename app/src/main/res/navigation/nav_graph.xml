<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/departmentFragment">

    <fragment
        android:id="@+id/departmentFragment"
        android:name="com.example.matbase.DepartmentFragment"
        android:label="DepartmentFragment"
        tools:layout="@layout/fragment_department">
        <action
            android:id="@+id/action_departmentFragment_to_semesterFragment"
            app:destination="@id/semesterFragment" />
    </fragment>

    <fragment
        android:id="@+id/semesterFragment"
        android:name="com.example.matbase.SemesterFragment"
        android:label="SemesterFragment"
        tools:layout="@layout/fragment_semester">
        <argument
            android:name="department"
            app:argType="string" />
        <action
            android:id="@+id/action_semesterFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.matbase.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main" />

</navigation>